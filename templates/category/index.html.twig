{% extends 'base.html.twig' %}

{% block title %}Hello Category Page!
{% endblock %}

{% block body %}
	<div class="d-flex align-items-center justify-content-between">
		<span class="display-6">Categories</span>
		<a href="{{path('category_create')}}" class="btn btn-dark btn-sm">Create Category</a>
	</div>
	<div class="row mt-4 g-0">

		{% for category in categories %}
			<div class="col-12 col-md-4">
				<div class="card m-1 p-1">
					<div class="card-body">
						<h5 class="card-title">{{category.name}}</h5>
						<a href="{{path('category_edit',{id:category.id})}}" class="btn btn-link btn-sm">Edit</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
