{% extends 'base.html.twig' %}

{% block title %}Hello FormPage!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Form v3! âœ…</h1>
		{# {{form(form)}} #}
		{% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}
		{{form_start(form,{'method':'POST','attr':{'novalidate':'novalidate'}})}}
		{{form_errors(form)}}
		<div>
			{{form_errors(form.message)}}
			{{form_row(form.message,{'label':'Comment','attr':{'maxlength':10}})}}
		</div>
		<div>
			{{form_errors(form.email)}}
			{{form_row(form.email)}}
		</div>
		{{form_end(form)}}
	</div>
{% endblock %}
